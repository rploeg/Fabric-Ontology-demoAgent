@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix usertypes: <http://example.com/usertypes#> .

# Classes (Entity Types)
usertypes:Plant a rdfs:Class ; rdfs:label "Plant" .
usertypes:Unit a rdfs:Class ; rdfs:label "Unit" .
usertypes:SensorEvent a rdfs:Class ; rdfs:label "SensorEvent" .
usertypes:WaterQualitySample a rdfs:Class ; rdfs:label "WaterQualitySample" .

# Object Properties (Relationships)
usertypes:operates a rdf:Property ; rdfs:domain usertypes:Plant ; rdfs:range usertypes:Unit ; rdfs:label "operates" .
usertypes:hasReading a rdf:Property ; rdfs:domain usertypes:Unit ; rdfs:range usertypes:SensorEvent ; rdfs:label "hasReading" .
usertypes:sampledAt a rdf:Property ; rdfs:domain usertypes:Plant ; rdfs:range usertypes:WaterQualitySample ; rdfs:label "sampledAt" .

# Data Properties (Keys and attributes)
# Keys (string/int per constraints)
usertypes:PlantId a rdf:Property ; rdfs:domain usertypes:Plant ; rdfs:range xsd:string ; rdfs:label "PlantId" .
usertypes:UnitId a rdf:Property ; rdfs:domain usertypes:Unit ; rdfs:range xsd:string ; rdfs:label "UnitId" .
usertypes:SensorEventId a rdf:Property ; rdfs:domain usertypes:SensorEvent ; rdfs:range xsd:string ; rdfs:label "SensorEventId" .
usertypes:SampleId a rdf:Property ; rdfs:domain usertypes:WaterQualitySample ; rdfs:range xsd:string ; rdfs:label "SampleId" .

# Static attributes
usertypes:PlantName a rdf:Property ; rdfs:domain usertypes:Plant ; rdfs:range xsd:string ; rdfs:label "PlantName" .
usertypes:Region a rdf:Property ; rdfs:domain usertypes:Plant ; rdfs:range xsd:string ; rdfs:label "Region" .
usertypes:UnitType a rdf:Property ; rdfs:domain usertypes:Unit ; rdfs:range xsd:string ; rdfs:label "UnitType" .
usertypes:Status a rdf:Property ; rdfs:domain usertypes:Unit ; rdfs:range xsd:string ; rdfs:label "Status" .

# Timeseries attributes (double/datetime only)
usertypes:FlowRateLps a rdf:Property ; rdfs:domain usertypes:SensorEvent ; rdfs:range xsd:double ; rdfs:label "FlowRateLps" .
usertypes:PressureBar a rdf:Property ; rdfs:domain usertypes:SensorEvent ; rdfs:range xsd:double ; rdfs:label "PressureBar" .
usertypes:Timestamp a rdf:Property ; rdfs:domain usertypes:SensorEvent ; rdfs:range xsd:dateTime ; rdfs:label "Timestamp" .

# Water quality attributes
usertypes:TurbidityNTU a rdf:Property ; rdfs:domain usertypes:WaterQualitySample ; rdfs:range xsd:double ; rdfs:label "TurbidityNTU" .
usertypes:pH a rdf:Property ; rdfs:domain usertypes:WaterQualitySample ; rdfs:range xsd:double ; rdfs:label "pH" .
usertypes:ConductivityuScm a rdf:Property ; rdfs:domain usertypes:WaterQualitySample ; rdfs:range xsd:double ; rdfs:label "ConductivityuScm" .
usertypes:SampleTimestamp a rdf:Property ; rdfs:domain usertypes:WaterQualitySample ; rdfs:range xsd:dateTime ; rdfs:label "SampleTimestamp" .
