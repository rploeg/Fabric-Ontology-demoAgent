erDiagram
  MineSite {
    string MineSiteId PK
    string MineName
    string Region
  }
  Equipment {
    string EquipmentId PK
    string EquipmentType
    string Status
    string MineSiteId FK
  }
  SensorEvent {
    string SensorEventId PK
    double TemperatureC
    double VibrationMMs
    datetime Timestamp
    string EquipmentId FK
  }
